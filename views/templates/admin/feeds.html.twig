{% set headerTabContent = include('@Modules/pitticafeed/views/templates/admin/_common/nav.html.twig') %}

{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% form_theme generalForm 'PrestaShopBundle:Admin/TwigTemplateForm:prestashop_ui_kit.html.twig' %}

{% block content %}
  {{ form_start(generalForm) }}
  <div class="card">
    <h3 class="card-header">
      {% if icon %}
      <i class="material-icons">{{ icon|escape }}</i>
      {% endif %}
      {{ formName|escape }}
    </h3>
    <div class="card-block row">
      <div class="card-text">
        {{ form_widget(generalForm) }}
      </div>
    </div>
    <div class="card-footer">
      <div class="d-flex justify-content-end">
        <button class="btn btn-primary float-right" id="save-button">
          {{ 'Save'|trans({}, 'Admin.Actions') }}
        </button>
      </div>
    </div>
  </div>
  {{ form_end(generalForm) }}
  <div class="row">
    <div class="col">
      <div class="card">
        <h3 class="card-header">
          <i class="material-icons">open_in_new</i>
          {{ 'Download'|trans({}, 'Modules.Pitticafeed.Admin') }}
        </h3>
        <div class="card-body">
          <div class="card-block">
            <div class="card-text">
              <a href="{{ downloadUrl }}" title="{{ 'Download URL'|trans({}, 'Modules.Pitticafeed.Admin') }}" target="_new">
                {{ downloadUrl }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{ include('@Modules/pitticafeed/views/templates/admin/_common/generator.html.twig') }}
    {{ include('@Modules/pitticafeed/views/templates/admin/_common/cli.html.twig') }}
  </div>
  {{ include('@Modules/pitticafeed/views/templates/admin/_common/footer.html.twig') }}
{% endblock %}